CONFIG_LEAF_DIR          := @CONFIG_LEAF_DIR@
BASH_COMPLETION_DIR      := $(CONFIG_DIR)/bash_completion.d
CRUX_LOCK_DIR             := @CRUX_LOCK_DIR@
CRUX_PAGING_DIR           := @CRUX_PAGING_DIR@
CRUX_DUMP_DIR             := @CRUX_DUMP_DIR@
DEBUG_DIR                := @DEBUG_DIR@

CRUXFIRMWAREDIR           := @CRUXFIRMWAREDIR@

CRUX_CONFIG_DIR           := @CRUX_CONFIG_DIR@
CRUX_SCRIPT_DIR           := @CRUX_SCRIPT_DIR@

PKG_INSTALLDIR           := ${libdir}/pkgconfig
