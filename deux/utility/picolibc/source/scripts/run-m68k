dir="$(dirname "$0")"

# select the program
elf="$1"
shift

qemu="qemu-system-m68k"

# Point the semihosting driver at our new chardev

cmdline="program-name"
input=""
done=0

while [ "$done" != "1" ]; do
    case "$1" in
        --)
            shift
            done=1
            ;;
        -s|"")
            done=1
            ;;
        *)
            cmdline="$cmdline $1"
            case "$input" in
                "")
                    input="$1"
                    ;;
                *)
                    input="$input $1"
                    ;;
            esac
            shift
            ;;
    esac
done

semi=enable=on,chardev=stdio0,arg="$cmdline"

case "$elf" in
    *_softfp)
        elfbase=`echo "$elf" | sed 's/_softfp//'`
        ;;
    *)
        elfbase="$elf"
        ;;
esac

case "$elfbase" in
    *m5307|*m51qe|*m5329|*m5407|*m54455|*m5475)
        CPU=any
        ;;
    *m5206|*m5206e)
        CPU=m5206
        ;;
    *m5208)
        CPU=m5208
        ;;
    *m680?0)
        CPU=`echo "$elfbase" | sed 's/.*\(m680.0\)$/\1/'`
        echo CPU set to $CPU
        ;;
    *)
        CPU=m68020
        ;;
esac

echo "$input" | $qemu \
  -chardev stdio,id=stdio0,mux=on \
  -machine virt \
  -cpu "$CPU" \
  -semihosting-config "$semi" \
  -monitor none \
  -serial none \
  -net none \
  -nographic \
  -kernel "$elf" "$@"
